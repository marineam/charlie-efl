        }
      }
    }
    programs {
      program {
        name: "active";
        signal: "button,on";
        source: "";
        action: STATE_SET "active" 0.0;
        transition: DECELERATE 0.3;
        target:  "_bg2";
        target:  "label";
      }
      program {
        name: "inactive";
